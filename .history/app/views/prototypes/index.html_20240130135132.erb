<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        <%="こんにちは、" %>
        <%= link_to "#{current_user.name}さん", root_path, class: :greeting__link%>
      </div>
    <% end %>
    <div class="card__wrapper">
      <div class="card">
        <%= link_to image_tag("@prototype.image", class: :card__img ), root_path%>
      <div class="card__body">
        <%= link_to "@prototype.title", root_path, class: :card__title%>
      <p class="card__summary">
      <%= "@prototype.catch-copy" %>
      </p>
      <%= link_to "by @prototype.user_id.name", root_path, class: :card__user %>
  </div>
</div>
    </div>
  </div>
</main>
